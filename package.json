{
  "name": "database1",
  "version": "1.0.0",
  "description": "MERN example 1",
  "main": "server.js",
  "type": "module",
  "engines": {
    "node": "16.6.x",
    "npm": "7.19.x"
  },
  "scripts": {
    "start": "node --max-old-space-size=8192 backend/server",
    "server": "nodemon --max-old-space-size=8192 backend/server",
    "server:dev": "NODE_ENV=development nodemon backend/server",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"NODE_ENV=development npm run server\" \" NODE_ENV=development npm run client\"",
    "prod": "concurrently \"NODE_ENV=production npm run server\" \"NODE_ENV=production npm run client\"",
    "dev:debug": "concurrently \"npm run server\" \"NODE_OPTIONS='--inspect'  npm run client\"",
    "data:import": "NODE_ENV=development node backend/seeder",
    "data:destroy": "NODE_ENV=development node backend/seeder -d",
    "data-prod:import": "NODE_ENV=production node backend/seeder-prod",
    "data-prod:destroy": "NODE_ENV=production node backend/seeder-prod -d",
    "data-prod:pwd": "NODE_ENV=production node backend/seeder-prod -pw",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "author": "camps",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.22.0",
    "bcrypt": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csvtojson": "^2.0.10",
    "dotenv": "^10.0.0",
    "emailjs-com": "^3.2.0",
    "event-stream": "^4.0.1",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "fast-csv": "^4.3.6",
    "heroku": "^7.59.0",
    "heroku-cli": "^7.0.9",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongoose": "^6.0.8",
    "mongoose-aggregate-paginate-v2": "^1.0.5",
    "mongoose-paginate-v2": "^1.4.2",
    "multer": "^1.4.3"
  },
  "devDependencies": {
    "concurrently": "^6.3.0",
    "nodemon": "^2.0.13"
  }
}
